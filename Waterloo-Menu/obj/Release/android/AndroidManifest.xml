    <meta-data android:name="com.google.android.gms.version" android:value="@integer/google_play_services_version" />
    <activity android:icon="@drawable/icon" android:label="Waterloo-Menu" android:name="waterloomenu.MainActivity" />
    <provider android:name="mono.MonoRuntimeProvider" android:exported="false" android:initOrder="2147483647" android:authorities="waterloo.waterloo.mono.MonoRuntimeProvider.__mono_init__" />
    <activity android:icon="@drawable/icon" android:label="Waterloo-Menu" android:name="waterloo.waterloo.TrialSplashScreen" android:theme="@style/Mono.Android.Theme.Splash" android:noHistory="true">
